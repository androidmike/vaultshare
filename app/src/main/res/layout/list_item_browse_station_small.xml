<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="@dimen/cardMarginVertical"
        android:layout_marginLeft="@dimen/cardMarginHorizontal"
        android:layout_marginRight="@dimen/cardMarginHorizontal"
        android:layout_marginTop="@dimen/cardMarginVertical"
        android:padding="10dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

            <TextView android:id="@+id/station_display_name"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Unnamed"
                      android:textColor="#000"/>

            <TextView android:id="@+id/station_description"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textColor="#666"
                      android:text="Unnamed station"/>
        </LinearLayout>
        <ImageView android:layout_width="wrap_content"
                   android:id="@+id/live_indicator"
                   android:layout_height="wrap_content"
                   android:layout_gravity="top|right"
                   android:src="@drawable/abc_btn_check_to_on_mtrl_000"/>
    </android.support.v7.widget.CardView>
</FrameLayout>